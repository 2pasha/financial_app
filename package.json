
{
  "name": "moneta",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev:api": "pnpm --filter api run start:dev",
    "dev:web": "pnpm --filter web run dev",
    "dev": "concurrently \"npm:dev:api\" \"npm:dev:web\"",
    "build": "pnpm --filter \"./**\" run build",
    "test": "pnpm --filter \"./**\" run test",
    "install-all": "pnpm install",
    "prisma:studio": "pnpm --filter api exec prisma studio"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}